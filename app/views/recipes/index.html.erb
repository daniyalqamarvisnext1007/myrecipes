<h1>
	Listing All Recipes
</h1>

<% @recipes.each do |recipe| %>

<!-- for chef image will be used later  -->

	<div class="row">
		<div class="col-md-2">
			<section class="center">	
			</section>
		</div>
	</div>


	<div class="col-md-8 well">
		<h4><%= recipe.name %></h4>
		<p><%= trancate(recipe.email, length: 150) %></p>
		<p>
			<span class="quite">
				<small><%= time_ago_in_words(recipe.created_at) %></small>
			</span>
		</p>
	</div>

	
<% end %>
