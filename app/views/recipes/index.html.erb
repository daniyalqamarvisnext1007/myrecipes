<%= render 'shared/page_title', title: "Showing All Recipes" %>

<div align="center">
	<%= will_paginate %>
</div>
<% @recipes.each do |recipe| %>

	<div class="row">
		<div class="col-md-2">
			<section class="chef_info center">	
				<%= gravatar_for(recipe.chef, size: 120) %>
			</section>
		</div>
	</div>


	<div class="col-md-8 well">
		<h4><%= link_to recipe.name, recipe_path(recipe) %></h4>
		<p><%= truncate(recipe.email, length: 150) %></p>
		<p>
			<span class="quite">
				<small><%= time_ago_in_words(recipe.created_at) %></small>
			</span>
		</p>
	</div>

	
<% end %>



<div align="center">
	<%= will_paginate %>
</div>
